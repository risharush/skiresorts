<Window x:Class="Ski_Resorts.Booking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ski_Resorts"
        mc:Ignorable="d"
        Title="Booking" Height="325" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonOk" FontSize="20" Content="Ок!" Grid.Column="1" Margin="8" Grid.Row="1" Click="buttonOk_Click"/>
        <Label x:Name="label" FontSize="19" Content="Напишите на нашу почту&#xA;besthotels@gmail.com для брони" Margin="4, 3, 0, 0" Grid.Row="1"/>
        <Image x:Name="image" Source="горы2.jpg" Margin="5" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
